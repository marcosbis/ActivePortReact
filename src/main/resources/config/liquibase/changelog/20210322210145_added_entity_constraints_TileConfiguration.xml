<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity TileConfiguration.
    -->
    <changeSet id="20210322210145-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="service_type_id"
                                 baseTableName="tile_configuration"
                                 constraintName="fk_tile_configuration_service_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="service_type"/>

        <addForeignKeyConstraint baseColumnNames="tile_configuration_id"
                                 baseTableName="tile_configuration_services"
                                 constraintName="fk_tile_configuration_services_tile_configuration_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tile_configuration"/>

        <addForeignKeyConstraint baseColumnNames="services_id"
                                 baseTableName="tile_configuration_services"
                                 constraintName="fk_tile_configuration_services_services_id"
                                 referencedColumnNames="id"
                                 referencedTableName="service_configuration"/>
        
    </changeSet>
</databaseChangeLog>
